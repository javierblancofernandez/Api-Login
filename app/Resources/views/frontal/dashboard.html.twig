{% extends 'base.html.twig' %}

{% block titulo %} Dashboard
{% endblock %}

{% block contenido %}






<div class="card card-dashboard">
        <div class="card-body">
            <h3 class="general-dashboard-title">General Dashboard</h3><hr>
            <h4> Bienvenido {{ app.user.username }} </h4>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="widget">
                    <h4 class="widget-title">My Tests</h4>
                    <div class="separator"></div>
                    <div class="test">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Competency based test</h4>
                                <p class="card-text">Test based on competencies for a project manager position. Required
                                    for a job that demands high pressure management, result oriented and problem solver
                                    profile.</p>
                                <a href="#" class="btn btn-primary">View test</a>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Sales prediction based test</h4>
                                <p class="card-text">The Sales Index predicts to what extent a candidate is likely to
                                    perform in a sales oriented role, in particular, that the candidate will have the
                                    ability to "win" at all stages of the customer's buying process.
                                </p>
                                <a href="#" class="btn btn-primary">View test</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="widget">
                    <h4 class="widget-title">My Projects</h4>
                    <div class="separator"></div>
                    <div class="projects list-group">
                        <div data-spy="scroll" data-target="#navbar-example2" data-offset="0">
                            <div data-spy="scroll" data-target="#navbar-example3" data-offset="0">
                                <div class="card">
                                    <!-- <img src="..." class="card-img-top" alt="..."> -->
                                    <div class="card-body project-card">
                                        <h4 class="card-title">Project Manager</h4>
                                        <strong class="card-text">Test funnel for a project manager position.</strong>
                                        <p class="project-text">English test -> Competency test</p>
                                        <h6 class="test-active">Currently active</h6>
                                        <a href="#" class="btn btn-primary">View project</a>
                                    </div>
                                </div>
                                <div class="card">
                                    <!-- <img src="..." class="card-img-top" alt="..."> -->
                                    <div class="card-body project-card">
                                        <h4 class="card-title">Sales profile</h4>
                                        <strong class="card-text">Test funnel with 3 different test.</strong>
                                        <p class="project-text">Personality test -> Persuasiveness test -> Sales
                                            oriented test</p>
                                        <h6 class="test-non-active">Currently disabled</h6>
                                        <a href="#" class="btn btn-primary">View project</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="widget">
                    <h4 class="widget-title">My Reports</h4>
                    <div class="separator"></div>
                    <div class="reports">
                        <div class="card">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%"
                                    aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                    style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                                    style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar"
                                    style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-danger" role="progressbar"
                                    style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Reports</h5>
                                <p class="card-text">Here are your most used reports. You can easily edit your report
                                    with the online editor and customize it with personalised graphics, texts and
                                    images.</p>
                                <a href="#" class="btn btn-primary">Edit reports</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
